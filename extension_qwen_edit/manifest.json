{
  "manifest_version": 3,
  "name": "Qwen图片编辑工具",
  "version": "2.0.0",
  "description": "基于魔搭社区API的图片编辑生成工具,支持右键图片编辑和侧边栏操作",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "sidePanel"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "host_permissions": [
    "https://api-inference.modelscope.cn/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "打开Qwen图片编辑工具"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src https: data:;"
  }
}
